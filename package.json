{
  "name": "ts-load-balancer",
  "version": "0.0.1",
  "description": "Basic L7 load balancer",
  "main": "./bin/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "start": "tsx --watch ./index.ts -p=8080 -hc=2000 --strategy=rrobin --servers=localhost:8081,localhost:8082",
    "test": "glob '**/*.spec.ts' -c 'tsx --test'",
    "build": "esbuild index.ts --bundle --outfile=dist/index.js --platform=node --target=node20 && npm run copy:bin",
    "types": "npm-dts generate --entry=index.ts --output=dist/index.d.ts -L debug",
    "copy:bin": "rm -rf bin/ && mkdir bin && cp ./dist/index.js bin/"
  },
  "bin": {
    "tslb": "bin/index.js"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "load-balancer",
    "nodejs",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tagimu/ts-load-balancer.git"
  },
  "author": "Tagir M.",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.6.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20.14.9",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "glob": "^10.4.2",
    "npm-dts": "^1.3.12",
    "tsx": "^4.15.7",
    "typescript": "^5.5.2",
    "typescript-eslint": "^7.14.1"
  },
  "engines": {
    "node": "^20"
  }
}
